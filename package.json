{
  "name": "depterm",
  "version": "1.0.4",
  "description": "Terminal UI for managing JavaScript/TypeScript dependencies",
  "module": "dist/index.js",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "depterm": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun run build.ts",
    "compile": "bun build --compile --outfile=depterm src/index.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "release": "./scripts/release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Lukasdias/depterm.git"
  },
  "author": "Lukas Dias",
  "bugs": {
    "url": "https://github.com/Lukasdias/depterm/issues"
  },
  "homepage": "https://github.com/Lukasdias/depterm#readme",
  "keywords": [
    "cli",
    "tui",
    "terminal",
    "dependencies",
    "package-manager",
    "npm",
    "yarn",
    "pnpm",
    "bun",
    "interactive",
    "upgrade",
    "outdated"
  ],
  "license": "MIT",
  "dependencies": {
    "@opentui/core": "^0.1.80",
    "semver": "^7.6.3",
    "unicode-animations": "^1.0.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/semver": "^7.5.8",
    "typescript": "^5.7.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "overrides": {
    "unicode-animations": {
      "scripts": {}
    }
  }
}