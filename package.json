{
  "name": "depterm",
  "version": "1.0.0",
  "description": "Terminal UI for managing JavaScript/TypeScript dependencies",
  "type": "module",
  "bin": {
    "depterm": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --minify",
    "compile": "bun build --compile --outfile=depterm src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "tui",
    "dependencies",
    "package-manager",
    "npm",
    "yarn",
    "pnpm",
    "bun",
    "interactive",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@opentui/core": "^0.1.80",
    "semver": "^7.6.3",
    "unicode-animations": "^1.0.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/semver": "^7.5.8",
    "typescript": "^5.7.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}